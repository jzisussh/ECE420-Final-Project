                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/cell_border"/>
        </TableRow>

        <TableRow
            android:layout_width="200dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/A20"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/cell_border"/>

            <TextView
                android:id="@+id/A21"
